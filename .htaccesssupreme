# ===== Basic protections =====
Options -Indexes
# Deny sensitive files
<FilesMatch "^(?:\.env|wp-config\.php|\.git|composer\.(json|lock)|readme\.html|license\.txt)$">
  Require all denied
</FilesMatch>
<Files ".htaccess">
  Require all denied
</Files>
# Block risky HTTP methods
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteCond %{REQUEST_METHOD} ^(PUT|DELETE|TRACE|TRACK) [NC]
  RewriteRule .* - [F]
</IfModule>
# Prevent direct access to xmlrpc (if unused)
<Files "xmlrpc.php">
  Require all denied
</Files>
# WordPress standard rules (if WP site)
# BEGIN WordPress
<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase /
RewriteRule ^index\.php$ - [L]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.php [L]
</IfModule>
# END WordPress
